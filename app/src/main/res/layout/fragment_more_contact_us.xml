<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/more_fragment_txt_view_more"
        style="@style/txt_view_top_fragment"

        android:text="@string/more_fragment_txt_view_more"
       />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">



            <TextView
                android:id="@+id/more_fragment_txt_view_phone"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dim_contact_us_views_padding"
                android:paddingEnd="@dimen/dim_contact_us_views_padding"
                android:text="@string/login_fragment_phone"
                android:textColor="@color/red"


                android:textSize="24sp"

                />

            <View
                android:id="@+id/more_fragment_view1"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/dim_contact_us_views_padding"
                android:layout_marginEnd="@dimen/dim_contact_us_views_padding"
                android:background="@android:color/darker_gray"
                />

            <TextView
                android:id="@+id/more_fragment_txt_view_phone_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/ic_phone_orange_24dp"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dim_contact_us_views_padding"
                android:paddingEnd="@dimen/dim_contact_us_views_padding"
                android:textColor="@color/orange"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/more_fragment_txt_view_email"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dim_contact_us_views_padding"
                android:paddingEnd="@dimen/dim_contact_us_views_padding"
                android:text="@string/register_fragment_edt_txt_email"
                android:textColor="@color/red"
                android:textSize="24sp"
                />

            <View
                android:id="@+id/more_fragment_view2"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginStart="@dimen/dim_contact_us_views_padding"
                android:layout_marginEnd="@dimen/dim_contact_us_views_padding"
                android:background="@android:color/darker_gray"

                />

            <TextView
                android:id="@+id/more_fragment_txt_view_email_address"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:drawableStart="@drawable/email_icon"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:paddingStart="@dimen/dim_contact_us_views_padding"
                android:paddingEnd="@dimen/dim_contact_us_views_padding"
                android:textColor="@color/orange"
                android:textSize="18sp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginStart="@dimen/dim_contact_us_views_padding"
                android:layout_marginEnd="@dimen/dim_contact_us_views_padding">

                <ImageView
                    android:id="@+id/more_fragment_img_facebook"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/fb_photo"
                    />

                <ImageView
                    android:id="@+id/more_fragment_img_instagram"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/instagram_photo"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="@dimen/dim_contact_us_views_padding"
                android:layout_marginEnd="@dimen/dim_contact_us_views_padding">

                <ImageView
                    android:id="@+id/more_fragment_img_twitter"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:src="@drawable/twitter_photo"

                    />

                <ImageView
                    android:id="@+id/more_fragment_img_youtube"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:scaleType="fitXY"
                    android:src="@drawable/youtube_photo"

                    />



            </LinearLayout>





            <EditText
                android:id="@+id/more_fragment_edt_txt_message_head"
                style="@style/login_fragment_edt_txt"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_45dp"
                android:layout_marginStart="@dimen/dim_contact_us_views_padding"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/dim_contact_us_views_padding"


                android:hint="@string/more_fragment_edt_txt_message_head_hint"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                />

            <EditText
                android:id="@+id/more_fragment_edt_txt_message"
                style="@style/login_fragment_edt_txt"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="@dimen/dim_contact_us_views_padding"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/dim_contact_us_views_padding"
                android:gravity="top"
                android:hint="@string/more_fragment_edt_txt_message_hint"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:textColor="@color/orange"
                android:textColorHint="@color/orange"
                />

            <Button
                android:id="@+id/more_fragment_btn_send"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dim_35dp"
                android:layout_marginStart="120dp"
                android:layout_marginEnd="120dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/fragment_profile_modify_btn_background"
                android:text="@string/donation_form_fragment_btn_send"
                android:textColor="@color/lightGrey"
                />


        </LinearLayout>
    </ScrollView>




</LinearLayout>






