<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:gravity="center_vertical"
    android:layout_width="match_parent"

    android:layout_marginBottom="10dp"
    android:background="@drawable/user_cycle_views_background"
    android:layout_height="250dp"
    >
    <ImageView
        android:id="@+id/item_article_image_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/fb_photo"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/item_article_background_checkbox"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/item_favorite_checkbox_background"
        android:layout_margin="10dp"/>
    <CheckBox
        android:id="@+id/item_article_check_box_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/item_article_background_checkbox"
        app:layout_constraintBottom_toBottomOf="@id/item_article_background_checkbox"
        app:layout_constraintStart_toStartOf="@id/item_article_background_checkbox"
        app:layout_constraintEnd_toEndOf="@id/item_article_background_checkbox"
        android:button="@drawable/item_fav_checkbox_selector"


        />
    <TextView
        android:id="@+id/item_article_txt_view_article_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dim_45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@color/lightGrey"
        android:text="ufhfhwoeufhiufbefbiewbfuewbfi"
        android:textSize="22sp"
        android:gravity="center_vertical"
        android:textAlignment="center"
        android:background="@drawable/item_article_title_textview_background"/>



</androidx.constraintlayout.widget.ConstraintLayout>